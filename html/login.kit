<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap"
			rel="stylesheet"
		/>
    <script src="https://kit.fontawesome.com/6ee12b0358.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="/dist/css/main.min.css">
</head>
<body>
    <!--@include nav.kit-->
    <!--@include header.kit-->
    <section class="login section-padding">
        <form action="" class="login__form">
            <img src="/src/img/human.jpg" alt="" class="login__form-img">
            <h2 class="login__form-title">Logowanie</h2>
            <input type="text" id="name" name="name" placeholder="Nazwa użytkownika">
            <input type="password" id="password" name="password" placeholder="Hasło">
            <button class="login__form-btn btn-animation">Zaloguj</button>
            <hr>
            <p class="login__form-text">Nie pamiętasz hasła?</p>
            <a href="#" class="login__form-btn-white">Przypomnij hasło</a>
            <p class="login__form-text">Nie posiadasz konta?</p>
            <a href="/register.html" class="login__form-btn-white">Utwórz konto</a>

        </form>
    </section>
    <!-- @include footer.kit-->
    <script src="/dist/js/main.min.js"></script>
    
</body>
</html>